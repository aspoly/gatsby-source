{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2019", "esnext"],
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["src/**/**.test.ts"],
  "include": ["src/**/*"]
}
